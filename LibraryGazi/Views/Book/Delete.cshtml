@model LibraryGazi.Entity.Book

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-5">
   

    <h3>Silmek istediğinize emin misiniz?</h3>
    <div>
       
        <hr />
        <dl class="dl-horizontal">
            <dt>
                <label class="control-label  text-dark">Yazar  :</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Author.author_name)
            </dd>

            <dt>
                <label class="control-label  text-dark">Kategori  :</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category.category_name)
            </dd>

            <dt>
                <label class="control-label  text-dark">Yayınevi :</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Publisher.publisher_name)
            </dd>

            <dt>
                <label class="control-label  text-dark">Kitap Adı :</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.bookName)
            </dd>

            <dt>
                <label class="control-label  text-dark">Stok :</label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.bookStock)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                @Html.ActionLink("Back to List", "Index",null, new { @class = "btn btn-dark" })
            </div>
        }
    </div>
</div>