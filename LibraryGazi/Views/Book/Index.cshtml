@model IEnumerable<LibraryGazi.Entity.Book>

@{
    ViewBag.Title = "Index";
     Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-5">
   

    <p>
        @Html.ActionLink("+ YENİ", "Create",null, new { @class = "btn btn-success" })
    </p>
    <table class="table">
        <tr>
            <th>
                <label class="control-label  text-dark">Kitap </label>
            </th>
            <th>
                <label class="control-label text-dark">Yazar </label>
            </th>
            <th>
                 <label class="control-label text-dark">Kategori </label>
            </th>
            <th>
                <label class="control-label text-dark">Yayınevi </label>
            </th>

            <th>
                <label class="control-label text-dark">Stok </label>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.bookName)
                   
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.author_name)
                    
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.category_name)
                   
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher.publisher_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.bookStock)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id },new { @class="btn btn-warning"}) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id },new { @class = "btn btn-dark" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>

</div>