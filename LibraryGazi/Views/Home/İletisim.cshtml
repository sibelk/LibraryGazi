
@{
    ViewBag.Title = "İletisim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    body {
        background-color: powderblue;
    }
</style>
<h4 class="text-center mt-5">İletişim Formu</h4>
<div id="form3" class="container">

    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <form>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="name">
                                    AD SOYAD
                                </label>
                                <input type="text" class="form-control" id="name" required="required" />
                            </div>
                            <div class="form-group">
                                <label for="email">
                                    Email
                                </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-envelope-square"></i></span>
                                    </div>
                                    <input type="email" class="form-control" id="email" placeholder="Enter email" required="required" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="subject">
                                    Konu
                                </label>
                                <select id="subject" name="subject" class="form-control" required="required">
                                    <option value="na" selected="">Seçin:</option>
                                    <option value="service">Sorun Bildirim</option>
                                    <option value="suggestions">Öneriler</option>
                                    <option value="product">Yardım</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <label for="name">
                                    Mesaj
                                </label>
                                <textarea name="message" id="message" class="form-control" rows="8" cols=8" required="required" placeholder="Message"></textarea>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary pull-right" id="btnContactUs">
                            GÖNDER
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

