@model IEnumerable<LibraryGazi.Entity.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-5">

    <p>
        @Html.ActionLink("+ YENİ", "Create",null,new {@class="btn btn-success" })
    </p>
    <table class="table">
        <tr>
            <th>
                <label class="control-label  text-dark">Kategoriler</label>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.category_name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id },new {@class="btn btn-warning" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-dark" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
