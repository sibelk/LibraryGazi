@model LibraryGazi.Models.Card
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="product-details" class="container pb-5">
    <div class="row">
        <div class="col-md-12">
            <h2>İstek Sepeti</h2>
            <hr />
            @if (Model.CartLines.Count > 0)
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Kitap Adı</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartLines)
                        {


                            <tr>
                                <td><img src="~/template/photos/1.jpg" alt="Alternate Text" width="50" />    </td>
                                <td>@item.Book.bookName</td>

                                <td>
                                    @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                    {
                                        @Html.Hidden("Id", item.Book.Id)

                                        <button type="submit" class="btn btn-danger">
                                            <i class="fade fa-trash-o" aria-hidden="true"></i>
                                            Sil
                                        </button>

                                    }
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            }
            else
            {
               <div class="alert alert-warning" role="alert" >
                   İstek sepetnde ürün bulunmamaktadır.
               </div>
            }




            <div class="text-center">
                <a href="/Home/kitapayirtüye" class="btn btn-primary">
                    <i class="fa fa-angle-double-left" aria-hidden="true"></i>Kitap Ekle
                </a>
                <a href="/Cart/Checkout" class="btn btn-primary">
                    <i class="fa fa-check" aria-hidden="true"></i>İstekleri Gönder
                </a>
            </div>

        </div>
    </div>


</div>

